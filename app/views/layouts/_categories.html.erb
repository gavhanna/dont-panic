<br>
<h3>Categories</h3>
<div class="categories">
    <% @categories.each do |category| %>
        <div class="itemhols cat">
            <p><a href="/category/<%= category.title %>" class="button"><%= category.title %></a></p>
            <%= link_to (image_tag category.image, :class => "product-desc-img cat-img"), category %>
            <p><%= category.description %></p>
        </div>
    <% end %>
</div>